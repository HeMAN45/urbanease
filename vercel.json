{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    // 1. **NEW:** Explicitly route ALL files in the 'dist/assets' folder
    //    This ensures your bundled JS, CSS, and images are served correctly.
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    // 2. Existing Rule: Route all API calls to the serverless function
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts" 
    },
    // 3. Updated Rule: Route root path (/) to index.html
    {
      "src": "/",
      "dest": "/dist/index.html"
    },
    // 4. Updated Rule: Catch-all for all other client-side routes (e.g., /about) 
    //    Crucial for client-side routing to load index.html first.
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "buildCommand": "npm run build"
}
